<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="我"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/empty_avatar_user"
            android:id="@+id/user_head"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/user_head"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="取个名字这么费事么"
                android:id="@+id/user_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="添加职位@添加公司"
                android:id="@+id/add" />
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/arrow_down_float"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/ic_action_favorite"
                android:layout_centerVertical="true"
                android:id="@+id/mine_favourite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="我的收藏"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mine_favourite"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/ic_view"
                android:layout_centerVertical="true"
                android:id="@+id/mine_seen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="阅读过的文章"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mine_seen"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/entry_image_default"
                android:layout_centerVertical="true"
                android:id="@+id/mine_config"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="标签管理"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mine_config"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/logo_gray"
                android:layout_centerVertical="true"
                android:id="@+id/mine_ranking"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="掘金排名"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mine_ranking"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:drawable/star_on"
                android:layout_centerVertical="true"
                android:id="@+id/mine_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="设置"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/mine_setting"/>
        </RelativeLayout>
        </LinearLayout>
</LinearLayout>